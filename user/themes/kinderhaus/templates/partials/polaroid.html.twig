<figure class="polaroid {{ classes }}">
  {% set image = page.media[image] %}
  {% if title is empty %}
    {% set title = image.basename|replace('_', ' ')|title %}
  {% endif %}

  {{ image.lightbox().cropZoom(500, 500).html(title, title, 'polaroid__image') }}
  <figcaption class="polaroid__caption">{{ title }}</figcaption>
</figure>
